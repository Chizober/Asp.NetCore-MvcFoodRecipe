@model MvcFoodRecipe.Models.DTO.FoodListVm
@{

    ViewData["Title"] = "I never refuse the food that someone offers me because this is my ninja way!";
  
    Layout = "_Layout";
}
<section>
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Recipes</h2>
        </div>
<div class="jumbotron jumbotron-fluid" height: 60%; padding: 10px 0;font-family: sans-serif;">
    <div class="container">
        <h1 class="text-center" style="font-family: Oswald;font-weight: bold"><span style="color:#ed502e" ;>Zober's </span>Recipes</h1>
        <p class="lead text-center" style="color: #071527;">
            “Cooking is like painting or writing a song. Just as there are only so many notes or colors, there are only so many flavors—it’s how you combine them that sets you apart.”
           
            <cite style="color:#ed502e" ;class=" badge badge-dark"> – Wolfgang Puck</cite>
        </p>
    </div>
</div>

<ul class="cards">
        @foreach (var food in Model.FoodList)
        {
            <li class="cards_item">
        <div class="card">
            <div onclick="window.location.href='/Home/FoodDetail?foodId=@food.Id'">
                    <div class="card_image">
                        <img  src="/Uploads/@food.RecipeImage">
                        </div>
                    <div class="card_content">
 
                        <h5 class="card-title">@food.Title</h5>
                        <p class="card-text"> HealthLabel: @food.HealthLabel</p>
                        <p class="card-text">DietLabel: @food.DietLabel</p>
                        <p class="card-text">Calories: @food.Calories</p>

                                <button class="cardBtn" onclick="window.location.href='/Home/FoodDetail?foodId=@food.Id'">View Details</button>
                          
                    </div>
                </div></div>
                </li>
        }
  </ul></div></section>



