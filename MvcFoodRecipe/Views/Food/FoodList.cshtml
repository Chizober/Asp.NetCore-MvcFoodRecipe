@model MvcFoodRecipe.Models.DTO.FoodListVm
@{
    ViewData["Title"] = "Foodist";
    int intSno = 0;
}
<div class="container">

    <h2>Food Recipes</h2>
    <p><a asp-action="Add">Create New</a></p>
    <div class="col-4 p-0 justify-content-end">

        <form asp-controller="Food" asp-action="FoodList">
            <span class="btn-group">
                <input class="form-control" type="text" name="SearchText" placeholder ="Search Key" />
                <input class="p-1 ml-2 btn btn-sm btn-sec" type="submit" value="Search" />
            </span>

                <a class="btn btn-sec" href="/Food/FoodList">All Foods</a>
        </form>
    </div>
    <br/>
    <div class="table-responsive-sm">
    <table class="table align-middle" id="pagination_example">
        <thead>
        <tr>
           <th>Sno</th>
            <th>Title</th>
            <th>Image</th>
            <th>DietLabel</th>
            <th>HealthDiet</th>
            <th>Calories</th>
            <th>Ingredients</th>
            <th>Steps</th>
            <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model.FoodList)
        {
          intSno = intSno + 1;
            <tbody>
            <tr>
                <td>@intSno</td>
                <td>@item.Title</td>
                <td><img style="height:60px;width:80px" src="/Uploads/@item.RecipeImage" /></td>
                <td>@item.DietLabel</td>
                <td>@item.HealthLabel</td>
                <td>@item.Calories</td>
                <td>@item.Ingredients</td>
                <td>@item.Steps</td>
                <td>
                    <a href="/Food/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/Food/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
                </tr>
            </tbody>
        }

    </table></div>
    <div class="input-container">
        <a href="/Food/Add" class="btn btn-sec">Back</a>
    </div>
</div>

