@model MvcFoodRecipe.Models.Domain.FoodItem
@{
    ViewData["Title"] = "Add";

    Layout = "_Layout";
}

<form class="w-40"  style="margin-top:50px"; asp-action="Add" method="post" enctype="multipart/form-data">
    <h4 style="margin-top:80px" ;class="pb-10">Add Recipe</h4>
    <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="RecipeImage">

    <div class="input-container">
        <label asp-for="Title" class="w-40">Title</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="FoodPhoto" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>
    <div class="input-container">
        <label asp-for="DietLabel" class="w-40">DietLabel</label>
        <input type="text" class="input" asp-for="DietLabel">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="DietLabel"> </span>
    </div>
    <div class="input-container">
        <label asp-for="HealthLabel" class="w-40">HealthLabel</label>
        <input type="text" class="input" asp-for="HealthLabel">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="HealthLabel"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Calories" class="w-40">Calories</label>
        <input type="text" class="input" asp-for="Calories">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Calories"> </span>
    </div>
    <div class="input-container">
        <label asp-for="FoodPhoto" class="w-40">FoodPhoto</label>
        <input type="text" class="input" asp-for="FoodPhoto">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="FoodPhoto"> </span>
   </div>
   
    <div class="input-container">
        <label asp-for="Ingredients" class="w-40">Ingredients</label>
        @Html.TextArea("Ingredients", "Enter your Ingrdients Please", new{ @class="input"})
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Ingredients"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Steps" class="w-40">Steps</label>
        @Html.TextArea("Steps", "Enter your Steps Please", new{ @class="input"})
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Steps"> </span>
    </div>
  

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" asp-controller="Food" asp-action="FoodList">All records</a>
    </div>
</form>




